{
    // Custom language servers
    "languageserver": {
        // Run npm i -g bash-language-server to install the language server
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh", "bash", "zsh"],
            "ignoredRootPaths": ["~"]
        }
    },

    "coc.preferences.formatOnType": true,

    "coc.preferences.formatOnSaveFiletypes": [
        "html",
        "css",
        "javascript",
        "json",
        "jsonc",
        "markdown"
    ],

    // coc-explorer
    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.file.showHiddenFiles": true,
    "explorer.buffer.showHiddenBuffers": true,
    "explorer.datetime.format": "dd/MM/yy HH:mm:ss",
    "explorer.filename.colored.enable": true,
    "explorer.git.showIgnored": true,
    "explorer.keyMappings.global": {
        "-": "open:split",
        "\\": "open:vsplit",
        "s": "gitStage",
        "u": "gitUnstage"
    },

    // coc-prettier
    "prettier.tabWidth": 4,

    // coc-eslint
    "eslint.autoFixOnSave": true
}
